let open_user(c:channel, u:bitstring, exp_u:exponent, sku:SecretKey, a:bitstring, pka:PublicKey, exp_a:G, v:bitstring, pkv:PublicKey, exp_v:G, vc:bitstring, uri:bitstring) =
    in(c, e:bitstring);
    in(c, e2:bitstring);
    in(c, pke1:PublicKey);
    in(c, pke2:PublicKey);
    in(c, exp_e:G);
    in(c, exp_e2:G);
    in(c, euri:bitstring);
    if(e = a && e2 = v) then user(true, c, u, exp_u, sku, a, pka, exp_a, v, pkv, exp_v,vc, uri)
    else if(e2 = v) then user(false, c, u, exp_u, sku, e, pke1, exp_e ,v, pkv, exp_v, vc, uri)
    else if(e = a) then user(false, c, u, exp_u, sku, a, pka, exp_a, e2, pke2,exp_e2, vc, euri)
    else user(false, c, u, exp_u, sku, e, pke1, exp_e,e2, pke2, exp_e2, vc, euri).

let open_app(c:channel, a:bitstring, exp_a:exponent,  ska:SecretKey, u:bitstring, pku:PublicKey, exp_u:G, v:bitstring, pkv:PublicKey, exp_v:G, i:bitstring, pki:PublicKey, exp_i:G, uri:bitstring) =
    in(c, e:bitstring);
    in(c, e2:bitstring);
    in(c, pke1:PublicKey);
    in(c, pke2:PublicKey);
    in(c, exp_e:G);
    in(c, exp_e2:G);
    in(c, euri:bitstring);
    if(e = u && e2 = v) then app(true, c, a, exp_a, ska, u, pku, exp_u, v, pkv, exp_v, i, pki, uri) 
    else if(e2 = v) then app(false, c, a, exp_a, ska, e, pke1, exp_e, v, pkv, exp_v, i, pki, uri)
    else if(e = u) then     app(false, c, a, exp_a, ska, u, pku, exp_u, e2, pke2, exp_e2, i, pki, euri)
    else app(false, c, a, exp_a, ska, e, pke1, exp_e, e2, pke2, exp_e2, i, pki, euri)
    .  (* euri is a URI for another server. If the verifier is the intended trusted Solid server then the uri is as expected *) 

let open_verifier(c:channel, v:bitstring, exp_v:exponent,  skv:SecretKey, u:bitstring, pku:PublicKey, exp_u:G, a:bitstring, pka:PublicKey, exp_a:G, i:bitstring, pki:PublicKey,exp_i:G, uri:bitstring) =
    in(c, e:bitstring);
    in(c, e2:bitstring);
    in(c, pke1:PublicKey);
    in(c, pke2:PublicKey);
    in(c, exp_e:G);
    in(c, exp_e2:G);
    if(e = u && e2 = a) then verifier(true, c, v, exp_v, skv, u, pku, exp_u, a, pka, exp_a, i, pki,  uri)
    else if(e2 = a) then verifier(false, c, v, exp_v, skv, e, pke1, exp_e, a, pka,exp_a,  i, pki, uri) 
    else if(e = u) then      verifier(false, c, v, exp_v, skv, u, pku, exp_u, e2, pke2, exp_e2, i, pki,  uri)
    else verifier(false, c, v, exp_v, skv, e, pke1, exp_e, e2, pke2, exp_e2, i, pki, uri)
    .

